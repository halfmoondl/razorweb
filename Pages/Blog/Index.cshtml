@page
@model RazorWeb.Pages_Blog.IndexModel

@{
    ViewData["Title"] = "Cac bai viet";
    int i = 0;
}




<h1>Danh sach bai viet</h1>
<form method="get" asp-page="./Index">
    <label>Tim kiem</label>
    <input type="text" name="seachstring" />
    <button type="submit" class="btn btn-primary">Tim</button>

</form>

<p>
    <a asp-page="Create" class="btn btn-primary">Tao bai viet</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Stt
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Created)
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Article)
        {
            <tr>
                <td>
                    @(++i)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Sửa</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Xem</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    var pagingmodel = new RazorWeb.Helpers.PagingModel()
    {
        currentpage = Model.currentPage,
        countpages = Model.countPages,
        generateurl = (int? p) => Url.Page("/Blog/Index", new { p = p })

    };
}
<partial name="_PagingBlog" model="pagingmodel" />